<%= form_with model: @game, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :cost %>
    <%= form.number_field :cost%>
  </div>

  <div>
    <%= form.label :platform %>
    <%= form.select :platform, @platforms%>
  </div>

<div>
  <%= form.label :image %> 
  <%= form.file_field :image, accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
</div>

  <div>
   <%= form.submit %>  
  </div>
<% end %>